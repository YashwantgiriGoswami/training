<!DOCTYPE html>
<html lang="en">

<head>

    <!---CSS file in assets--->
    <link href="assets/style.css" rel="stylesheet" type="text/css" />

    <!---Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!---Bootstrap Bundle--->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <title>Course Management System</title>

</head>

<body>

    <!--navigation -->

    <%- include('partials/nav.ejs') %>



        <div id="empty-table-display">
            <h3>No Course Available</h3>
            <a href="/addCourse"><button class="btn btn-outline-success" type="submit">Add Course</button></a>
        </div>

        <% if (data.length !== 0) { %>
            <script>
                document.getElementById("empty-table-display").style.display = "none";
            </script>
            <% } %>

                <!-- <script> 
            document.getElementById("empty-table-display").style.display = "none";
        </script> -->

                <div id="course-table">
                    <table class="table caption-top">
                        <caption>All Courses</caption>
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Duration</th>
                                <th scope="col">Fees</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < data.length ; i++) { %>
                                <tr>
                                    <th scope="row">
                                        <%= i+1 %>
                                    </th>
                                    <td>
                                        <%= data[i].name %>
                                    </td>
                                    <td>
                                        <%= data[i].duration %>
                                    </td>
                                    <td>
                                        <%= data[i].fees %>
                                    </td>
                                    <td>
                                        <form method="get" action="/editCourse"><button type="submit" id="button-icon"><img id="icon" src="https://img.icons8.com/emoji/48/000000/pencil-emoji.png" /></button></form>
                                    </td>
                                    <td>
                                        <form method="get" action="/editCourse"><button type="submit" id="button-icon"><img id="icon" src="https://img.icons8.com/emoji/48/000000/wastebasket-emoji.png" /></button></form>
                                    </td>
                                </tr>
                                <%}%>

                        </tbody>
                    </table>
                </div>

                <% if(data.length === 0) { %>
                    <script>
                        document.getElementById("course-table").style.display = "none";
                    </script>
                    <%}%>
                        <!-- <script>
            document.getElementById("course-table").style.display = "none";
        </script> -->


                        <%- include('partials/footer.ejs') %>
                            <!---Bootstrap separate--->

                            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
                            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

</body>

</html>